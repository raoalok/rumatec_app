<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="parent">

    <Button
        android:id="@+id/button_return_to_top"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        app:icon="@drawable/baseline_arrow_circle_up_24"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Top"
        android:backgroundTint="@color/grey"
        android:backgroundTintMode="screen"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/schedule_list_spinner"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:visibility="gone"
        style="@style/item_stock_spinner_style"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/schedule_visit_reason_spinner"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/schedule_list_spinner"
        style="@style/item_stock_spinner_style"
        android:layout_gravity="center" />



    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:maxLines="10"
        android:visibility="gone"
        style="@style/edit_text_style"
        android:id="@+id/update_item_stock_client"
        android:hint="Visit Details..."
        app:layout_constraintBottom_toBottomOf="@+id/simpleCalendarView"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text_view_date_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:visibility="gone"
        android:textAlignment="center"
        style="@style/edit_text_style"
        app:layout_constraintBottom_toBottomOf="@+id/update_item_stock_client"
        android:padding="20dp" />


    <Button
        android:id="@+id/add_to_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Add"
        android:backgroundTint="@color/grey"
        android:backgroundTintMode="screen"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_date_1"
        android:gravity="center"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="0.5"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>