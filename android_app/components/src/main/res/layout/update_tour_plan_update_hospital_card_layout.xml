<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/background1"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_light_grey"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hospital_map_mark_svgrepo_com"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/update_tour_plan_update_hospital_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLength="200"
            android:maxLines="3"
            android:text="Dr ABCcccccccccccccccddddddddddddccccccccccccccccccc"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>