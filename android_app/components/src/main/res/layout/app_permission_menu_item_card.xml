<?xml version="1.0" encoding="utf-8"?>
<!--
    MODERNIZED PERMISSION MENU ITEM - Material 3 Design
    
    Changes from original:
    - Replaced CardView with MaterialCardView
    - Removed custom border drawable, using card stroke instead
    - Increased corner radius to 12dp
    - Better spacing and padding using design tokens
    - Improved icon sizing and positioning
    - Cleaner typography with proper hierarchy
    - Added ripple effect for better touch feedback
    - Removed unnecessary nested layouts
    - Better alignment using ConstraintLayout
-->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_md"
    android:layout_marginEnd="@dimen/spacing_md"
    android:layout_marginTop="@dimen/spacing_sm"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardCornerRadius="12dp"
    app:cardElevation="@dimen/elevation_sm"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:padding="@dimen/spacing_md">

        <!-- Permission Icon -->
        <ImageView
            android:id="@+id/app_tour_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_permission_required"
            android:contentDescription="@string/app_permissions_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/app_permission_required" />

        <!-- Text Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm"
            app:layout_constraintStart_toEndOf="@id/app_tour_image"
            app:layout_constraintEnd_toStartOf="@id/chevron_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/permission_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_permissions_title"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_h4"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="App Permissions" />

            <!-- Description -->
            <TextView
                android:id="@+id/permission_menu_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/app_permissions_description"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body2"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Permissions required for the app to function properly." />

        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/chevron_icon"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@null"
            app:tint="@color/text_tertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_chevron_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
