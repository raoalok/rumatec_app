<?xml version="1.0" encoding="utf-8"?>
<!--
    Trip Plan Card - Standardized Layout
    
    Changes from original:
    - CardView → MaterialCardView
    - Hard-coded margins → Design tokens
    - Hard-coded padding → Design tokens
    - Hard-coded colors → Semantic tokens
    - Hard-coded text sizes → Typography tokens
    - Custom background → Theme surface color
    - ImageView buttons → MaterialButton (accessibility)
    - Improved layout hierarchy
-->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding_horizontal">

        <!-- Date -->
        <TextView
            android:id="@+id/trip_plan_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_h3"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Date: 2025-11-15" />

        <!-- Route -->
        <TextView
            android:id="@+id/trip_plan_route"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textSize="@dimen/text_size_body1"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trip_plan_date"
            tools:text="Route: City A to City B" />

        <!-- Start Place -->
        <TextView
            android:id="@+id/trip_plan_start_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_size_body1"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trip_plan_route"
            tools:text="Start Place: Location A" />

        <!-- End Place -->
        <TextView
            android:id="@+id/trip_plan_end_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_size_body1"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trip_plan_start_place"
            tools:text="End Place: Location B" />

        <!-- Travel Mode -->
        <TextView
            android:id="@+id/trip_travel_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_size_body1"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trip_plan_end_place"
            tools:text="Travel Mode: Car" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/spacing_md"
            android:background="@color/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trip_travel_mode" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Info Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/trip_plan_info_button"
                style="@style/AppButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/trip_info"
                app:icon="@drawable/info_square_svgrepo_com"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/trip_plan_edit_button"
                style="@style/AppButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/edit"
                app:icon="@drawable/baseline_edit_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/trip_plan_delete_button"
                style="@style/AppButton.Icon.Danger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/delete"
                app:icon="@drawable/baseline_delete_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
