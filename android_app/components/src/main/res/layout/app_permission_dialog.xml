<?xml version="1.0" encoding="utf-8"?>
<!-- 
    MODERNIZED APP PERMISSION PAGE - Material 3 Design
    
    Changes from original:
    - Replaced RelativeLayout with ConstraintLayout for better performance
    - Removed background drawable, using solid color with proper theming
    - Modernized header with better spacing and typography
    - Added proper Material 3 spacing tokens throughout
    - Improved accessibility with proper content descriptions
    - Better visual hierarchy with elevation and spacing
    - Cleaner, more minimal design following Material 3 guidelines
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header Section with Logo and Title -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="@dimen/elevation_sm"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_xl"
            android:paddingBottom="@dimen/spacing_lg"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_md"
            android:gravity="center_horizontal">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rumatec_logo_full_name"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/app_permissions_title"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center" />

            <!-- Subtitle/Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/app_permissions_subtitle"
                android:textSize="@dimen/text_size_body2"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"
                android:paddingStart="@dimen/spacing_lg"
                android:paddingEnd="@dimen/spacing_lg" />

            <!-- Optional User Name (Hidden by default) -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body1"
                tools:text="John Doe"
                tools:visibility="visible" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Permissions List Section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_xl"
            android:paddingStart="@dimen/spacing_sm"
            android:paddingEnd="@dimen/spacing_sm">

            <!-- Permissions RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_app_permission_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="6"
                tools:listitem="@layout/app_permission_card"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
