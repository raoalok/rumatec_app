<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Top spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="Placeholder Image"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission Title Here"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why this permission is needed..."
            android:textSize="16sp"
            android:textColor="#444"
            android:gravity="center" />

        <TextView
            android:id="@+id/drawback_of_permission_denial"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš  Drawback if user denies permission"
            android:textSize="14sp"
            android:textColor="#B00020"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
