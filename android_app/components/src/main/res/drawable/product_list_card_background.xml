<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Gradient background -->
    <gradient
        android:angle="45"
        android:startColor="#FFD4D6DA"
        android:endColor="#FFD1D6E4"
        android:type="linear" />

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#FFB0B3BA" />
</shape>
