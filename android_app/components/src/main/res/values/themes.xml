<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ============================================ -->
    <!-- BASE APPLICATION THEME                       -->
    <!-- ============================================ -->
    <style name="Theme.rumatec_vetcare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Action Bar -->
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="background">@color/background</item>
        <item name="android:windowActionBarOverlay">false</item>

        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/AppBottomNavigationView</item>

        <!-- Text Appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <!-- ============================================ -->
    <!-- ACTION BAR STYLE                             -->
    <!-- ============================================ -->
    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/background3</item>
        <item name="elevation">@dimen/elevation_sm</item>
    </style>

    <!-- Legacy alias -->
    <style name="MyActionBar" parent="AppActionBar" />

    <!-- ============================================ -->
    <!-- BOTTOM NAVIGATION STYLE                      -->
    <!-- ============================================ -->
    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/transparent</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="android:background">@color/transparent</item>
        <item name="elevation">@dimen/elevation_md</item>
    </style>

    <!-- Legacy alias -->
    <style name="MyBottomNavigationView" parent="AppBottomNavigationView" />

    <!-- ============================================ -->
    <!-- FULLSCREEN THEME OVERLAY                     -->
    <!-- ============================================ -->
    <style name="ThemeOverlay.RumatecVetcare.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- ============================================ -->
    <!-- TEXT APPEARANCE STYLES                       -->
    <!-- Based on Material Design Type Scale          -->
    <!-- ============================================ -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body2</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
